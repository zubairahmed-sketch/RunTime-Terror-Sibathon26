{
  "name": "battlebrains",
  "version": "1.0.0",
  "description": "BattleBrains - Multiplayer gamified learning platform for kids 8-14",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": ["education", "gamification", "quiz", "multiplayer", "phaser", "battlebrains"],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
